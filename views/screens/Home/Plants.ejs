<div class="row">
<% for(let plant of plants) { %>
  <div class="col col-12 col-md-6 col-lg-3 mb-5">
    <div class="card plant">
      <div class="img-container">
        <div class="overlay">
          <a href="/plants/<%= plant._id %>" class="add-to-cart">
            <i class="fa-solid fa-cart-shopping"></i>
          </a>
        </div>
        <img src="<%= plant.image  %>" class="card-img-top img">
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= plant.name  %></h5>
        <p class="desc"><%= plant.description  %></p>
        <p class="price">$<%= plant.price  %></p>
      </div>
    </div>
  </div>
<% } %>
</div>